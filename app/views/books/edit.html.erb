<%= render 'devise/shared/error_messages', resource: @book %>

<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<div class="box2">
        <h1>Editing Book</h1>
        <%= form_with model:@book, local:true do |f| %>
      	<div>
      		<%= f.label :title %>
      		<%= f.text_field :title, class: "col-sm-12 book_title" %>
      	</div>
      	<div>
      		<%= f.label :opinion %>
      		<%= f.text_area :body, class: "col-sm-12 book_body" %>
      	</div>
      	<div>
      		<%= f.submit 'Update Book', class: "btn btn-sm btn-success col-sm-4" %>
      	</div>
        <% end %>
        <%= link_to "Show", @book, class: "book_#{@book.id}" %> |
	      <%= link_to "Back", books_path, class: "back" %>
      </div>
    </div>
  </div>
</div>