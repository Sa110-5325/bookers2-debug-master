<div class="row">
  <% user = current_user if user.nil? %>
  <table class="table">
    <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
    <tr>
  	  <th>name</th>
  	  <th><%= user.name %></th>
    </tr>
    <tr>
  	  <th>introduction</th>
  	  <th><%= user.introduction %></th>
    </tr>
  </table>
  <%= link_to '',edit_user_path(user), class: "col-md-12 btn btn-outline-secondary btn-block fas fa-user-cog  edit_user_#{user.id}" %>
</div>
